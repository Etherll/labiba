
ثابت الوزن = انتظر لوحة.اسأل_نص("ادخل وزنك بالكيلو")
ثابت الطول = انتظر لوحة.اسأل_نص("ادخل طولك بالسنتيميتر")

متغير النتيجة = مؤشر_الوزن(الوزن, الطول)

//إزالة الفواصل
النتيجة = النتيجة.الى_ثابت(1)

ثابت طباعة = "مؤشر الوزن الطبيعي لديك يساوي: " + النتيجة
لوحة.اطبع(طباعة)
انتظر لبيبة.انذار("يجب أن يكون مؤشر الوزن بين ال 18 و ال 25")

مهمة مؤشر_الوزن(الوزن,الطول) {
    ارجاع (الوزن / (الطول * الطول)) * 10000
}
